<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/highblock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="715dp"
        android:background="@color/purple_200"
        app:layout_constraintBottom_toTopOf="@id/buttonblock"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/downblock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="715dp"
        android:background="#E6FC86"
        app:layout_constraintBottom_toBottomOf="parent" >

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonblock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="110dp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#CCEFE8"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/downblock"
        tools:layout_editor_absoluteX="46dp" />

</androidx.constraintlayout.widget.ConstraintLayout>